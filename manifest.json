{

    "manifest_version": 2,
    "name": "StudyBuddy",
    "version": "1.0",

    "description": "Ever tried to study but you keep getting distracted by Facebook, Youtube, or Reddit? StudyBuddy helps you not fail by blocking access to sites that distract you from studying.",
    "homepage_url": "https://github.com/nyu-ossd-s20/StudyBuddy",
    "icons": {
      "48": "icons/sb_icon.svg"
    },

    "permissions": [
        "activeTab",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],

    "browser_action": {
        "default_icon": "icons/sb_icon_big.svg",
        "default_title": "StudyBuddy",
        "default_popup": "popup/study_buddy.html"
    },

    "background": {
        "scripts": ["background.js"]
    }
}
